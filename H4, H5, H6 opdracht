float cijfer = 7;
float alessen = 17;
float totaallessen = 20;
boolean geslaagd = false;
float procent;

procent = alessen * 100 / 20;
if(procent >= 80 && cijfer >= 5.5){
  println("Geslaagd!");
}else{
  println("Gezakt. :(");
}

