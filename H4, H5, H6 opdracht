1.8.1

int temperatuurCelsius = 38;

if(temperatuurCelsius > 25){
  if(temperatuurCelsius < 30){
    println("True");
  }else{
    println("Het is heet het is " + temperatuurCelsius + " graden.");
  }
}else{
  println("Het is koud het is " + temperatuurCelsius + " graden.");
}  

1.9
double spelerscore1 = Math.floor(Math.random() * 49);
double spelerscore2 = Math.floor(Math.random() * 49);

println("Speler 1 score is " + spelerscore1);
println("Speler 2 score is " + spelerscore2);
if(spelerscore1 > spelerscore2){
  println("Speler 1 heeft gewonnen!");
}else if(spelerscore1 < spelerscore2){
  println("Speler 2 heeft gewonnen");
}else{
  println("Gelijkspel.");
}

